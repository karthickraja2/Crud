@model Crud.Models.Task


@{
    ViewData["Title"] = "Create";
}
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css" rel="stylesheet">

<br />
       <br />
<br />

        <div class=" container">
            <div class="row">
                <div class="col-6 offset-3">
                    <div class=" card">
                        <div class="card-header">
                    <h1 class="text-center" style="color:black"><i class="fa-sharp fa-solid fa-notes-medical"></i> Create Task</h1>
                        </div>
                        <div class=" card-body">
                            <form method="post" asp-controller="Tasks" asp-action="Create">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                <div class="col-md-4">
                                    <label for="Task_Name">Task_Name</label>
                                    @Html.Kendo().TextAreaFor(ss=>ss.Task_Name)
                                </div>
                                <div style="color:red">
                                    @Model.Response
                                </div>

                                <div class="row-cols-4">
                                    <div class="col-md-4">
                                        <label for="Description">Description</label>
                                        @Html.Kendo().TextAreaFor(ss=>ss.Description)
                                    </div>
                            <br />
                                    <div class="form-group">
                                        <input type="submit" value="Create" class="btn btn-primary" />
                                        <a asp-action="Index">Back to List</a>
                                   </div>
                        </div>
                            </form>
                        </div>

                    </div>
                </div>
            </div>
        </div>

 <body>
     <style>
        body {
            background-image: url('https://media.istockphoto.com/photos/dark-gloomy-blue-and-black-slate-background-or-texture-picture-id1387342670?k=20&m=1387342670&s=612x612&w=0&h=Ayr994IJLKsyW_uBlnh8cWu6c0o4tEbOcWVMR8Its7k=');
