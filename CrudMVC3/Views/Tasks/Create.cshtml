@model Crud.Models.Task


@{
    ViewData["Title"] = "Create";
}


        <div class=" container">
            <div class="row">
                <div class="col-6 offset-3">
                    <div class=" card">
                        <div class="card-header">
                            <h1 class="text-center text-success">Create Task</h1>
                        </div>
                        <div class=" card-body">
                            <form method="post" asp-controller="Tasks" asp-action="Create">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                <div class="col-md-4">
                                    <label for="Task_Name">Task_Name</label>
                                    @Html.Kendo().TextAreaFor(ss=>ss.Task_Name)
                                </div>
                                <div style="color:red">
                                    @Model.Response
                                </div>

                                <div class="row-cols-4">
                                    <div class="col-md-4">
                                        <label for="Description">Description</label>
                                        @Html.Kendo().TextAreaFor(ss=>ss.Description)
                                    </div>

                                    <div class="form-group">
                                        <input type="submit" value="Create" class="btn btn-primary" />
                                        <a asp-action="Index">Back to List</a>
                                   </div>   
                            </form>
                        </div>

                    </div>
                </div>
            </div>
        </div>

